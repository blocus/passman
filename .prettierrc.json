{
  "semi": false,
  "overrides": [
    {
      "files": ["*.js", "*.jsx", "*.ts"],
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "jsxSingleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "jsxBracketSameLine": true,
        "arrowParens": "avoid"
      }
    },
    {
      "files": ["*.css", "*.json", "*.scss", "*.html"],
      "options": {
        "printWidth": 100,
        "useTabs": false,
        "tabWidth": 2
      }
    }
  ]
}
